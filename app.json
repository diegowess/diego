{
  "expo": {
    "name": "Beep Motorista",
    "slug": "BeepCarMotorista",
    "version": "1.0.15",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "BeepCarMotorista",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.diegoassp.beepcarmotorista",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification",
          "processing"
        ],
        "NSLocationWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização para encontrar corridas próximas.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização em primeiro e segundo plano para continuar rastreando sua posição enquanto você dirige.",
        "NSLocationAlwaysUsageDescription": "Este aplicativo precisa acessar sua localização em primeiro e segundo plano para continuar rastreando sua posição enquanto você dirige."
      }
    },
    "android": {
      "package": "com.diegoassp.beepcarmotorista",
      "versionCode": 22,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "VIBRATE",
        "INTERNET",
        "SYSTEM_ALERT_WINDOW",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCqogzkL4dzoy_PEbVyAOoc_bdR2BrzWeU"
        }
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "usesCleartextTraffic": true
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Este aplicativo precisa acessar sua localização em primeiro e segundo plano para continuar rastreando sua posição enquanto você dirige.",
          "locationWhenInUsePermission": "Este aplicativo precisa acessar sua localização para encontrar corridas próximas.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "70cc9729-a24c-4305-9cd8-a56ddb5543d3"
      }
    },
    "androidNavigationBar": {
      "backgroundColor": "#000000",
      "barStyle": "light-content"
    }
  }
}
